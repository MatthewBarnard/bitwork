<div class="panel panel-default" style="width:40%; display: inline-block">
  <div class="col-md-12 text-right"><label class="label label-danger"><%= time_ago_in_words(advert.date_expiry) %>
    left</label></div>
  <div class="row">
    <div class="col-md-2 text-center" style="vertical-align:central">
      <img class="profile-picture" src="/images/profile_pictures/<%= advert.user.profile_picture %>">
    </div>
    <div class="col-md-10">
      <a href="/advert/<%= advert.id %>"><%= advert.title %></a><br>
      <small>posted by - <a href="/user/<%= advert.user_id %>"><%= advert.user.full_name %></a></small>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="col-lg-8 col-md-8 col-xs-12">
        <h3>
          <strong><label class="label label-info"><i class="fa fa-money"></i><%= number_to_currency(advert.payment.blank? ? 0 : advert.payment, unit: 'R', separator: ',', delimiter: ' ') %>
          </label></strong>
        </h3>
      </div>
      <div class="col-lg-3 col-md-3 col-xs-12">
        <h3>
          <strong><a href="/advert/<%= advert.id %>" class="btn btn-success"><i class="fa fa-eye" style="color:#268526"></i>Read
            More</a></strong></h3>
      </div>
    </div>
  </div>
</div>